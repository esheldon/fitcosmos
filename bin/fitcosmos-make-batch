#!/usr/bin/env python

import fitcosmos
import argparse

parser=argparse.ArgumentParser()
parser.add_argument('--system',default='wq',required=True)
parser.add_argument('--run-config',required=True)
parser.add_argument('--fit-config',required=True)
parser.add_argument('--fofs',required=True)
parser.add_argument('--missing',action='store_true')
parser.add_argument('meds',nargs='+')

parser.add_argument("--loglevel", default='info',
                  help=("logging level"))

def main():
    args=parser.parse_args()

    fitcosmos.util.setup_logging(args.loglevel)

    if args.system=='wq':
        maker=fitcosmos.batch.WQBatchMaker(args)
    elif args.system=='shell':
        maker=fitcosmos.batch.ShellBatchMaker(args)
    elif args.system=='condor':
        maker=fitcosmos.batch.CondorBatchMaker(args)
    else:
        raise ValueError('system should be "wq" or "shell"')

    maker.go()

if __name__=='__main__':
    main()
 
